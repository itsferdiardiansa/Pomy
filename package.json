  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "reset": "npx nx reset",
    "format": "pnpm nx run-many -t format",
    "format:write": "pnpm nx run-many -t format:write",
    "lint": "pnpm nx run-many -t lint",
    "lint:fix": "pnpm nx run-many -t lint:fix",
    "test": "pnpm nx run-many -t test",
    "test:coverage": "pnpm nx run-many -t test:coverage",
    "generate-reports": "node ./scripts/generate-reports.js"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "pnpm run format:write",
      "pnpm run lint:fix",
      "pnpm run test"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "vercel": "^33.5.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@jest/globals": "^29.7.0",
    "@nx/js": "18.2.1",
    "@nx/storybook": "18.2.1",
    "@nx/vite": "18.2.1",
    "@nx/web": "18.2.1",
    "@storybook/addon-essentials": "7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/core-server": "7.5.3",
    "@storybook/jest": "^0.2.3",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "7.5.3",
    "@storybook/vue3-vite": "7.5.3",
    "@swc-node/register": "~1.8.0",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@vercel/analytics": "^1.1.4",
    "@vercel/node": "^3.0.19",
    "@vercel/remote-nx": "^2.0.0",
    "@vercel/speed-insights": "^1.0.10",
    "chalk": "^4.1.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "nx": "18.2.1",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "storybook": "^7.5.3",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.4.2",
    "vite": "~5.0.0"
  }
